  <script>
    // Particles System (Stars/Background Effects)
    const canvas = document.getElementById('particlesCanvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const particles = [];
    for (let i = 0; i < 200; i++) {
      particles.push({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        vx: (Math.random() - 0.5) * 0.5,
        vy: (Math.random() - 0.5) * 0.5,
        size: Math.random() * 2 + 0.5,
        brightness: Math.random()
      });
    }

    function animateParticles() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      particles.forEach(p => {
        ctx.save();
        ctx.globalAlpha = p.brightness * 0.8;
        ctx.fillStyle = '#00eaff';
        ctx.shadowBlur = 10;
        ctx.shadowColor = '#00eaff';
        ctx.beginPath();
        ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
        ctx.fill();
        p.x += p.vx;
        p.y += p.vy;
        if (p.x < 0 || p.x > canvas.width) p.vx *= -1;
        if (p.y < 0 || p.y > canvas.height) p.vy *= -1;
        ctx.restore();
      });
      requestAnimationFrame(animateParticles);
    }
    animateParticles();

    // Radar Scanner
    const radarCtx = document.getElementById('radarCanvas').getContext('2d');
    let radarAngle = 0;
    function animateRadar() {
      radarCtx.clearRect(0, 0, 300, 300);
      radarCtx.strokeStyle = `rgba(0, 234, 255, 0.1)`;
      radarCtx.lineWidth = 1;
      radarCtx.beginPath();
      radarCtx.arc(150, 150, 140, 0, Math.PI * 2);
      radarCtx.stroke();

      // Rotating sweep
      const sweepOpacity = 0.4 + 0.2 * Math.sin(Date.now() * 0.005);
      radarCtx.save();
      radarCtx.translate(150, 150);
      radarCtx.rotate(radarAngle);
      radarCtx.strokeStyle = `rgba(0, 234, 255, ${sweepOpacity})`;
      radarCtx.lineWidth = 2;
      radarCtx.shadowBlur = 20;
      radarCtx.shadowColor = '#00eaff';
      radarCtx.beginPath();
      radarCtx.moveTo(0, 0);
      radarCtx.lineTo(140, 0);
      radarCtx.stroke();
      radarCtx.restore();

      // Blips
      radarCtx.fillStyle = '#00ff88';
      for (let i = 0; i < 3; i++) {
        const angle = (radarAngle + i * Math.PI * 2 / 3) % (Math.PI * 2);
        const dist = 50 + Math.sin(Date.now() * 0.01 + i) * 30;
        radarCtx.beginPath();
        radarCtx.arc(150 + Math.cos(angle) * dist, 150 + Math.sin(angle) * dist, 3, 0, Math.PI * 2);
        radarCtx.fill();
      }

      radarAngle += 0.03;
      requestAnimationFrame(animateRadar);
    }
    animateRadar();

    // Enhanced Binary
    const binaryDiv = document.getElementById("binaryContent");
    function generateBinary(lines = 450, width = 32) {
      let content = '';
      for (let i = 0; i < lines; i++) {
        content += Array(width).fill(0).map(() => Math.random() > 0.5 ? '1' : '0').join('') + '\n';
      }
      binaryDiv.textContent = content + content;
    }
    generateBinary();

    // Exact IST Time (Current: Jan 2026 context)
    function updateClock() {
      const now = new Date().toLocaleString('en-IN', { 
        timeZone: 'Asia/Kolkata',
        hour12: false,
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        weekday: 'short',
        day: 'numeric',
        month: 'short',
        year: 'numeric'
      });
      const [time, date] = now.split(', ');
      document.getElementById('liveClock').textContent = time;
      document.getElementById('liveDate').textContent = date + ' IST';
    }
    setInterval(updateClock, 1000);
    updateClock();

    // Dynamic Status Cycling with Typing Effect
    const statuses = [
      { label: 'SUBSYSTEM', value: 'Neural Core: 98%' },
      { label: 'TARGET LOCK', value: 'Hostiles: 3' },
      { label: 'QUANTUM CPU', value: '7.2 TFLOPS' },
      { label: 'MEMORY', value: '89/128 GB' }
    ];
    let statusIndex = 0;
    function cycleStatus(side) {
      const box = side === 'left' ? document.getElementById('leftStatus') : document.getElementById('rightStatus');
      const label = box.querySelector('.label');
      const value = box.querySelector('.value');
      const current = statuses[statusIndex % statuses.length];
      label.textContent = current.label;
      value.textContent = '|';
      let i = 0;
      const typeInterval = setInterval(() => {
        if (i < current.value.length) {
          value.textContent = current.value.slice(0, i + 1) + '|';
          i++;
        } else {
          value.textContent = current.value;
          clearInterval(typeInterval);
        }
      }, 80);
      statusIndex++;
    }
    setInterval(() => cycleStatus('left'), 5000);
    setInterval(() => cycleStatus('right'), 7000);
    cycleStatus('left');
    cycleStatus('right');

    // Resize handler
    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    });
  </script>
</body>

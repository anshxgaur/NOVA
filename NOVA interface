  <script>
    // Binary generation
    const binaryDiv = document.getElementById("binaryContent");
    function generateBinary(lines = 500, width = 36) {
      let content = '';
      for (let i = 0; i < lines; i++) {
        content += Array(width).fill(0).map(() => Math.random() > 0.5 ? '1' : '0').join('') + '\n';
      }
      binaryDiv.textContent = content + content;
    }
    generateBinary(500, 34);

    // Live Clock
    function updateClock() {
      const now = new Date();
      const h = String(now.getHours()).padStart(2, '0');
      const m = String(now.getMinutes()).padStart(2, '0');
      const s = String(now.getSeconds()).padStart(2, '0');
      document.getElementById('liveClock').textContent = `${h}:${m}:${s}`;
    }
    setInterval(updateClock, 1000);
    updateClock();
  </script>
